<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c6"
    android:padding="30dp">



    <LinearLayout
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        >

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/c1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NAME"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <EditText
            android:background="@drawable/round"
            android:id="@+id/join_name_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
>

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/c1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ID"
            android:textStyle="bold"
            android:textSize="20dp"
           />

        <EditText
            android:background="@drawable/round"
            android:id="@+id/join_id_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/c1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PWD"
            android:textStyle="bold"
            android:textSize="17.7dp"
            />

        <EditText
            android:background="@drawable/round"
            android:inputType="textPassword"
            android:id="@+id/join_pass_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/c1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="E-Mail"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:background="@drawable/round"
            android:id="@+id/join_email_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top|center">
        <Button
            android:background="@drawable/round1"
            android:layout_margin="10px"
            android:backgroundTint="@color/c3"
            android:textColor="#fff"
            android:id="@+id/joinsubmit"
            android:onClick="SubmitJoin"
            android:text="가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/round1"
            android:layout_margin="10px"
            android:textColor="#FFF"
            android:backgroundTint="@color/c3"
            android:id="@+id/cancle"
            android:onClick="Cancle"
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


</LinearLayout>
