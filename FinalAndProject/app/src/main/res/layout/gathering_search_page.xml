<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c6"
    android:orientation="vertical"
    android:padding="13dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="제목"
                android:textColor="@color/c1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/search_title_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/round" />

            <Button
                android:id="@+id/title_search_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_weight="0.7"
                android:background="@drawable/round1"
                android:backgroundTint="@color/c3"
                android:onClick="StartSearch"
                android:text="검색"
                android:textColor="#fff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="성별"
                android:textColor="@color/c1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/join_id_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/round"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_man"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="남성" />

                <RadioButton
                    android:id="@+id/radio_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="여성" />

                <RadioButton
                    android:id="@+id/radio_dontcaresex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="무관" />

            </RadioGroup>

            <Button
                android:id="@+id/sex_search_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_weight="0.7"
                android:background="@drawable/round1"
                android:backgroundTint="@color/c3"
                android:onClick="StartSearch"
                android:text="검색"
                android:textColor="#fff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="지역"
                android:textColor="@color/c1"
                android:textSize="17.7dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/round"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/area_search_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_weight="0.7"
                android:background="@drawable/round1"
                android:backgroundTint="@color/c3"
                android:onClick="StartSearch"
                android:text="검색"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="해쉬태그"
                android:textColor="@color/c1"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/join_email_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/round" />

            <Button
                android:id="@+id/hashtag_search_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_weight="0.7"
                android:background="@drawable/round1"
                android:backgroundTint="@color/c3"
                android:onClick="StartSearch"
                android:text="검색"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/total_search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:background="@drawable/round1"
            android:backgroundTint="@color/c3"
            android:onClick="StartSearch"
            android:text="검색"
            android:textColor="#fff" />

        <Button
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:background="@drawable/round1"
            android:backgroundTint="@color/c3"
            android:onClick="Cancle"
            android:text="취소"
            android:textColor="#FFF" />


    </LinearLayout>


</LinearLayout>
